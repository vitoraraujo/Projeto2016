<%= form_for(@user) do |f| %>

  <div class="row" style="width: 80%;">
    <div class="container" >
      <%= f.label "Usuário:", { class: "formStuff" } %>
      <%= f.text_field :name %>
    </div><br>
    <div class="container" >
      <%= f.label "E-mail:", { class: "formStuff" } %>
      <%= f.email_field :email %>
    </div><br>
    <div class="container" >
      <%= f.label "Senha:", { class: "formStuff" } %>
      <%= f.password_field :password %>
    </div><br>
    <div class="container" >
      <%= f.label "Confirmação da senha:", { class: "formStuff" } %>
      <%= f.password_field :password_confirmation %>
    </div><br>
    <div class="actions">
      <%= f.submit "Pronto", { :class=>"btn waves-effect waves-light orange" } %>
    </div>
  </div>   
<% end %>

<% if @user.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@user.errors.count, "erro") %> . Esta conta não pôde ser criada:</h2>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>