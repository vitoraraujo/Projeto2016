<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> Esse post não pode ser salvo:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="container" >
      <%= f.label "nome", { class: "formStuff" } %><br>
      <%= f.text_field :name %>
    </div>
    <div class="container" >
      <%= f.label "descrição", { class: "formStuff" } %><br><br>
      <%= f.text_area :description %>
    </div>
    <br>





    <div class="actions">
      <%= f.submit "Pronto", { :class=>"waves-effect waves-light btn" } %>
    </div>

  </div>        
<% end %>
